<%= stylesheet_link_tag "navbar"%>

<nav class="navbar">
  <%= link_to root_path, class: "navbar-logo" do %>
    <%= image_tag("tree.png", alt: "LinkTree Logo", class: "logo-image") %>
    <span class="logo-text">Branched</span>
  <% end %>
  
  <div class="navbar-links">
    <% if user_signed_in? %>
      <%= link_to "My Trees", trees_path, class: "nav-link" %>
      <%= link_to "New Tree", new_tree_path, class: "nav-link" %>
      <%= link_to "Log out", "/users/sign_out", class: "nav-link logout-link" %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, class: "nav-link signup-link" %>
      <%= link_to "Log in", new_user_session_path, class: "nav-link login-link" %>
    <% end %>
  </div>
</nav>