<%= stylesheet_link_tag "devise"%>

<div class="auth-container">
  <div class="auth-header">
    <h2 class="auth-title">Welcome Back</h2>
    <p>Sign in to access your account</p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit "Log in", class: "form-submit" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "auth-link" %>
    <%= link_to "Forgot password?", new_password_path(resource_name), class: "auth-link" %>
  </div>
</div>
